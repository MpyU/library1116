<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.dao.FineDao">

    <!--i id int primary key auto_increment comment "ID",
     uid int comment "用户ID",
     price double comment "罚款金额",
     fine_desc varchar(255) comment "罚款描述即原因",
     pay_date date comment "付款时间"

    private Integer id;
    private Integer uid;
    private Double price;
    private String fineDesc;
    private String payDate;
     -->

    <sql id="baseSql">
        id,uid,price,fine_desc,pay_date
    </sql>


    <select id="get" resultType="com.library.pojo.User">
        select
        <include refid="baseSql"/>
        from fine
        <trim prefix="where" suffixOverrides="and">
            <if test="id != null">
                id = #{id} and
            </if>
            <if test="username != null">
                uid = #{uid} and
            </if>
            <if test="password != null">
                price = #{price} and
            </if>
            <if test="telephone != null">
                fineDesc = #{fineDesc} and
            </if>
            <if test="email != null">
                payDate = #{payDate} and
            </if>
        </trim>
    </select>

    <select id="selectAll" resultType="com.library.pojo.User">
        select
        <include refid="baseSql"/>
        from sys_user
    </select>


    <select id="getByPWD" resultType="com.library.pojo.User">
        select
        <include refid="baseSql"/>
        from sys_user
        where password = #{password} and (username = #{username} or telephone = #{username} or email = #{username})

    </select>

    <insert id="save" parameterType="com.library.pojo.User" useGeneratedKeys="true" keyProperty="id">
        <!--id,username,password,telephone,email,headImage,status,register-->
        insert into sys_user(username,password,telephone,email,head_image,status,register_date)
        values (#{username},#{password},#{telephone},#{email},#{headImage},0,#{registerDate})
    </insert>

    <update id="update" parameterType="com.library.pojo.User">
        update sys_user
        <set>
            <if test="username != null">
                username = #{username} ,
            </if>
            <if test="password != null">
                password = #{password} ,
            </if>
            <if test="telephone != null">
                telephone = #{telephone} ,
            </if>
            <if test="email != null">
                email = #{email}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from sys_user where id = #{id}
    </delete>

</mapper>